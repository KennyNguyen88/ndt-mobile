<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_snippet_002"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.trung.snippet.Snippet_002Activity">

    <Button android:id="@+id/button"
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <TextView android:id="@+id/txtMeasuredWidth"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <TextView android:id="@+id/txtWidth"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <TextView android:id="@+id/txtLayoutParam"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button android:id="@+id/btnEdit"
        android:text="Change button width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
