<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/poscoLightBlue"
        android:padding="5dp"
        android:text="Item: "
        android:textColor="@color/white"
        android:layout_toLeftOf="@+id/desc_detail"
        android:layout_toStartOf="@+id/desc_detail" />

    <TextView
        android:id="@+id/item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_label"
        android:background="@color/poscoLightGray"
        android:padding="5dp"
        android:textColor="@color/black"
        android:text="Q1000429" />


    <TextView
        android:id="@+id/onhand_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/hightlight"
        android:padding="5dp"
        android:text="20000"
        android:textColor="@color/black"
        android:minWidth="100dp"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/onhand_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/onhand_detail"
        android:background="@color/poscoLightBlue"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="On-hand: " />

    <TextView
        android:id="@+id/desc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_label"
        android:background="@color/poscoLightBlue"
        android:padding="5dp"
        android:text="Desc: "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/desc_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_label"
        android:layout_toRightOf="@+id/desc_label"
        android:background="@color/poscoLightGray"
        android:padding="5dp"
        android:textColor="@color/black"
        android:text="Oil Seal/Bearing Isolator TC, ID75xOD100" />
</RelativeLayout>