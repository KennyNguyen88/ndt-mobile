<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:background="@color/poscoDarkGray"
        android:padding="5dp"
        android:text="Item: "
        android:textColor="@color/white" />
    <TextView android:id="@+id/item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_label"
        android:background="@color/poscoLightGray"
        android:padding="5dp"
        android:textColor="@color/black"
        android:text="Q1000429"
        tools:layout_width="wrap_content" />
    <TextView android:id="@+id/uom_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/poscoLightGray"
        android:padding="5dp"
        android:text="EA"
        android:textColor="@color/black"
        android:minWidth="60dp"
        />
    <TextView android:id="@+id/uom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/uom_detail"
        android:minWidth="60dp"
        android:background="@color/poscoDarkGray"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="UOM: " />

    <TextView android:id="@+id/stock_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:background="@color/poscoDarkGray"
        android:padding="5dp"
        android:text="Stock: "
        android:textColor="@color/white"
        android:layout_below="@+id/item_label"
        />
    <TextView android:id="@+id/stock_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stock_label"
        android:layout_below="@+id/item_detail"
        android:background="@color/poscoLightGray"
        android:padding="5dp"
        android:textColor="@color/black"
        android:text="Q1101"
        tools:layout_width="wrap_content" />
    <TextView android:id="@+id/onhand_detail"
        android:layout_below="@id/uom_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/hightlight"
        android:padding="5dp"
        android:text="20000"
        android:textColor="@color/black"
        android:minWidth="60dp"
        android:inputType="numberDecimal" />
    <TextView android:id="@+id/onhand_label"
        android:layout_below="@+id/uom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/onhand_detail"
        android:minWidth="60dp"
        android:background="@color/poscoDarkGray"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="Qty: " />

    <TextView android:id="@+id/desc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock_label"
        android:minWidth="60dp"
        android:background="@color/poscoDarkGray"
        android:padding="5dp"
        android:text="Desc: "
        android:textColor="@color/white" />
    <TextView android:id="@+id/desc_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock_detail"
        android:layout_toRightOf="@+id/desc_label"
        android:background="@color/poscoLightGray"
        android:padding="5dp"
        android:textColor="@color/black"
        android:text="Oil Seal/Bearing Isolator TC, ID75xOD100" />
</RelativeLayout>